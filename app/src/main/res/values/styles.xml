<resources>

    <style name="Theme.ToolBar.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@android:color/holo_green_dark</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="defStyleAttrTest">@style/defStyleAttrStyle
        </item> <!--item的name是属性名，name肯定是在attrs.xml中定义过的-->
        <item name="attr5">attr5 from AppTheme</item>
        <item name="attr6">attr6 from AppTheme</item>
    </style>

    <style name="ToolBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/holo_blue_light</item>
        <!--<item name="android:windowBackground">@android:color/holo_green_dark</item>-->
    </style>

    <style name="XmlStyle">
        <item name="attr4">attr4 from XmlStyle</item>
    </style>

    <style name="defStyleAttrStyle">
        <item name="attr4">attr4 from defStyleAttrStyle</item>
        <item name="attr5">attr5 from defStyleAttrStyle</item>
        <item name="attr6">attr6 from defStyleAttrStyle</item>
    </style>

    <style name="defStyleResStyle">
        <item name="attr4">attr4 from defStyleResStyle</item>
        <item name="attr5">attr5 from defStyleResStyle</item>
    </style>

    <style name="text_style_01">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <!--<item name="android:layout_margin">4dp</item>-->
        <item name="android:background">@drawable/bg_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="text_style_02">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/bg_gray</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
