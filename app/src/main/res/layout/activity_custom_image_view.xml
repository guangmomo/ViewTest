<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_custom_image_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.xuliwen.viewtest.customview.customimageview.CustomImageViewActivity">

        <com.xuliwen.viewtest.customview.customimageview.CustomImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="2dp"
            app:titleText="徐立文,徐立文，徐立文"
            app:titleSize="10sp"
            app:borderWidth="2dp"
            app:imageResource="@drawable/big"
            app:imageScaleType="center"
            app:borderColor="@android:color/holo_blue_dark"
            />
        <com.xuliwen.viewtest.customview.customimageview.CustomImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            app:titleText="徐立文,徐立文，徐立文，徐立文，徐立文，徐立文"
            app:titleSize="10sp"
            app:borderWidth="2dp"
            app:imageResource="@drawable/test"
            app:imageScaleType="center"
            app:borderColor="@android:color/holo_blue_dark"
            />

        <com.xuliwen.viewtest.customview.customimageview.CustomImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            app:titleText="徐立文,徐立文"
            app:titleSize="10sp"
            app:borderWidth="2dp"
            app:imageResource="@drawable/test"
            app:imageScaleType="center"
            app:borderColor="@android:color/holo_blue_dark"
            />





</LinearLayout>
