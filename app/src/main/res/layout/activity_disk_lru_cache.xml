<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_disk_lru_cache"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.xuliwen.viewtest.imageloader.DiskLruCacheActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下载图片到磁盘缓存"
        android:onClick="downloadToDiskCache"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示磁盘缓存的图片"
        android:onClick="showDiskCache"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="移除磁盘缓存某个的图片"
        android:onClick="removeADiskCache"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取缓存占用大小"
        android:onClick="getDiskCacheUseSize"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="清空缓存"
        android:onClick="cleanDiskCache"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/disk_cache_imageView"/>

</LinearLayout>
